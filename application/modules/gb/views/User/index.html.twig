{% extends "common/base.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="/application/modules/gb/views/includes/css/jquery/jquery.dataTables.min.css">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="/application/modules/gb/views/includes/js/jquery/jquery.dataTables.min.js">
    </script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#table_messages').dataTable();
        });
    </script>
{% endblock %}
{% block body %}
    {{ parent() }}
    <div id="table_messages_wrapper" class="wrapper">
        <table id="table_messages">
            <thead>
                <th>UserID</th>
                <th>User name</th>
                <th>Category</th>
                <th>E-mail</th>
                <th>Homepage</th>
                <th>Created at</th>
                <th>Text</th>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.user_id }}</td>
                        <td>{{ user.UserName }}</td>
                        <td>{{ user.Category }}</td>
                        <td>{{ user.Email }}</td>
                        <td>{{ user.Homepage }}</td>
                        <td>{{ user.MessageDate }}</td>
                        <td>{{ user.MessageText }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}